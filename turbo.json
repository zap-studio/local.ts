{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        "src-tauri/target/release/**",
        "src-tauri/target/debug/**"
      ]
    },
    "check": {
      "dependsOn": ["^build", "^check"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "format": {
      "cache": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false
    },
    "tauri": {
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "test:coverage": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"]
    },
    "test:ui": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "test:watch": {
      "dependsOn": ["^build"],
      "persistent": true,
      "cache": false
    },
    "validate": {
      "dependsOn": ["build", "check", "lint", "test"]
    }
  }
}
